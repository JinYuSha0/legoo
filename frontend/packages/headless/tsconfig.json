{
  "files": ["src/index.ts"],
  "include": ["src/"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2018"],
    "baseUrl": "./src",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-native",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [
      "src/types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  }
}
